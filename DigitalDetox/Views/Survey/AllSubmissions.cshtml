@model List<DigitalDetox.Models.StudentResponse>
@{
    ViewData["Title"] = "All Submissions";
}

<h2>All Submissions</h2>


@if (!Model.Any())
{
    <div class="alert alert-warning">No submissions found for this date range.</div>
}
else
{
    <table class="table table-bordered table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Roll</th>
                <th>Question</th>
                <th>Answer</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Student.Name</td>
                    <td>@r.Student.Class</td>
                    <td>@r.Student.Roll</td>
                    <td>@r.Question.QuestionText</td>
                    <td>@(r.Answer ? "হ্যা" : "না")</td>
                    <td>@r.WeekStartDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
