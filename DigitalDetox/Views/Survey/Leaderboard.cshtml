@{
    ViewData["Title"] = "Leaderboard";
}

<h2>Leaderboard</h2>

<form method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <label>From Date:</label>
            <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label>To Date:</label>
            <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" />
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Class</th>
            <th>Roll</th>
            <th>Yes Count</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr><td colspan="5" class="text-center">No submissions found in this range.</td></tr>
        }
        else
        {
            int rank = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@rank</td>
                    <td>@item.Student.Name</td>
                    <td>@item.Student.Class</td>
                    <td>@item.Student.Roll</td>
                    <td>@item.YesCount</td>
                </tr>
                rank++;
            }
        }
    </tbody>
</table>
